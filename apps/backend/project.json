{
    "name": "backend",
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "npm run build",
          "cwd": "apps/backend"
        }
      },
      "start": {
        "executor": "nx:run-commands",
        "options": {
          "command": "npm start",
          "cwd": "apps/backend"
        }
      },
      "lint": {
        "executor": "nx:run-commands",
        "options": {
          "command": "npm run lint",
          "cwd": "apps/backend"
        }
      }
    }
  }